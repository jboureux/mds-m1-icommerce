generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("CART_DATABASE_URL")
}

model Cart {
    id        Int        @id @default(autoincrement())
    userId    Int        @unique
    cartItems CartItem[]
}

model CartItem {
    id       Int  @id @default(autoincrement())
    cart     Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)
    cartId   Int
    product  Int
    quantity Int
}
